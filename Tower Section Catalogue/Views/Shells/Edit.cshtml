@model Tower_Section_Catalogue.Models.Shell
<link  href="~/css/forms.css" rel="stylesheet"/>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit the desired fields</h1>

<h4>Please make the necessary changes to the form below to update the shell's information.</h4>
<hr />
<div class="row">
    <div class="col-md-4 form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShellPosition" />
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BottomDiameter" class="control-label"></label>
                <input asp-for="BottomDiameter" class="form-control" />
                <span asp-validation-for="BottomDiameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopDiameter" class="control-label"></label>
                <input asp-for="TopDiameter" class="form-control" />
                <span asp-validation-for="TopDiameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thickness" class="control-label"></label>
                <input asp-for="Thickness" class="form-control" />
                <span asp-validation-for="Thickness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SteelDensity" class="control-label"></label>
                <input asp-for="SteelDensity" class="form-control" />
                <span asp-validation-for="SteelDensity" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="TowerSectionId" class="form-control" type="hidden" />
                <span asp-validation-for="TowerSectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
        <path d="M7.78 12.53a.75.75 0 0 1-1.06 0L2.47 8.28a.75.75 0 0 1 0-1.06l4.25-4.25a.751.751 0 0 1 1.042.018.751.751 0 0 1 .018 1.042L4.81 7h7.44a.75.75 0 0 1 0 1.5H4.81l2.97 2.97a.75.75 0 0 1 0 1.06Z"></path>
    </svg>
    Back to List
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

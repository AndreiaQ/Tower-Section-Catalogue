@model Tower_Section_Catalogue.Models.Shell
<link href="~/css/Details.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table form-container">
    <thead>
        <tr>
            <th>Property</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Height</td>
            <td>@Html.DisplayFor(model => model.Height)</td>
        </tr>
        <tr>
            <td>Bottom Diameter</td>
            <td>@Html.DisplayFor(model => model.BottomDiameter)</td>
        </tr>
        <tr>
            <td>Top Diameter</td>
            <td>@Html.DisplayFor(model => model.TopDiameter)</td>
        </tr>
        <tr>
            <td>Thickness</td>
            <td>@Html.DisplayFor(model => model.Thickness)</td>
        </tr>
        <tr>
            <td>Steel Density</td>
            <td>@Html.DisplayFor(model => model.SteelDensity)</td>
        </tr>
        <tr>
            <td>Tower Section</td>
            <td>@Html.DisplayFor(model => model.TowerSection.Id)</td>
        </tr>
    </tbody>
</table>

